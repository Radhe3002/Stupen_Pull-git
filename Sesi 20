const int potPin = 34;    // Pin input potensiometer
const int servoPin = 18;  // Pin output servo

void setup() {
  pinMode(servoPin, OUTPUT); // Mengatur pin servo sebagai output
  Serial.begin(115200);      // Memulai komunikasi serial
}

void loop() {
  int potValue = analogRead(potPin); // Membaca nilai potensiometer (0-4095)

  // Mengonversi nilai potensiometer ke rentang yang sesuai untuk servo (0.5ms - 2.5ms pulse width)
  int pulseWidth = map(potValue, 0, 4095, 500, 2500);

  // Mengirimkan sinyal PWM secara manual dengan menulis pulsa HIGH dan LOW
  digitalWrite(servoPin, HIGH);
  delayMicroseconds(pulseWidth);
  digitalWrite(servoPin, LOW);
  delay(20 - pulseWidth / 1000); // Delay untuk mencapai periode 20ms

  Serial.print("Pot Value: ");
  Serial.print(potValue);
  Serial.print(" => Pulse Width: ");
  Serial.println(pulseWidth);
}


